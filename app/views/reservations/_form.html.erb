<%= form_for([@restaurant, @reservation]) do |f| %>
	<% if @reservation.errors.any? %>
		<div id="error_explanation">
			<ul>
				<% @reservation.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :restime %><br>
		<%= f.datetime_select :restime, start_year: 2015, discard_minute: true, start_hour: 12, end_hour: 20, ampm: true %>
	</div>

	<div class="field">
		<%= f.label :guests %><br>
		<%= f.text_field :guests %>
		
	</div>
	
	<div class="action">
		<%= f.submit %>
	</div>

<% end %>
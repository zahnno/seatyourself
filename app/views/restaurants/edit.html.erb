<h1>Edit Restaurant Page</h1>

<%= form_for(@restaurant, method: "patch") do |restaurant| %>

  <div class = "field">
	<%= restaurant.label :name %><br>
	<%= restaurant.text_field :name%><br>
  </div>
  <div class="field">
    <%= restaurant.label :address %>
    <%= restaurant.text_field :address %><br/>
  </div>
  <div class="field">
    <%= restaurant.label :genre %>
    <%= restaurant.text_field :genre %><br/>
  </div>
  <div class="field">
    <%= restaurant.label :price %>
    <%= restaurant.text_field :price %><br/>
  </div>
  <div class= "field">
    <%= restaurant.label :photo %>
    <%= restaurant.text_field :photo %><br/>
  </div>
  <div class= "field">
    <%= restaurant.label :capacity %>
    <%= restaurant.number_field :capacity %><br/>
  </div>
	
    <%= restaurant.submit %>


	<% end %>